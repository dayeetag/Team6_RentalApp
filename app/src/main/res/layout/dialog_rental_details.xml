<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivPropertyImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cityskyline"
        android:contentDescription="Property Image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left side with three specifications -->
        <TextView
            android:id="@+id/tvBedrooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bed "
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvBathrooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bath "
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvParkingLots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Parking "
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <!-- Rightmost side with star icon for shortlisting -->
        <ImageView
            android:id="@+id/ivShortlistDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:contentDescription="Shortlist Icon"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPropertyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Northtown Way, North York"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Bed 2 Bath 1 Parking, 5 mins to Subway, Stunning View, Cover Hydro + Heat..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvOwnerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="HHHHHHHHHHHHHHHHHHHHHHH"
        android:background="#23000000"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>


</LinearLayout>